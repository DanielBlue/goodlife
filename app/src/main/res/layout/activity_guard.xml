<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBaseBackground"
    android:orientation="vertical"
    tools:context="com.zoesap.goodlife.activity.GuardActivity">

    <include layout="@layout/include_top_toolbar" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="@dimen/content_top_size"
               android:background="@android:color/white"
               android:gravity="center"
               android:orientation="vertical">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:drawablePadding="@dimen/base_margin"
                   android:drawableTop="@drawable/door_scan"
                   android:gravity="center_horizontal"
                   android:padding="@dimen/base_margin"
                   android:text="@string/saoyisao"
                   android:textColor="@color/textColorBlack" />
           </LinearLayout>

           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/img_no_doorlog" />
       </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
