<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:paddingBottom="@dimen/base_margin">

        <TextView
            android:id="@+id/tv_area_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/base_margin"
            android:layout_marginLeft="@dimen/margin_big"
            android:layout_marginTop="@dimen/margin_big"
            android:maxLines="1"
            android:singleLine="true"
            android:text="武汉市  洪山区"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_house_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_area_address"
            android:layout_below="@id/tv_area_address"
            android:maxLines="1"
            android:singleLine="true"
            android:text="体验小区"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_medium" />

        <TextView
            android:id="@+id/tv_house_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_house_name"
            android:layout_marginLeft="@dimen/margin_big"
            android:layout_toRightOf="@id/tv_house_name"
            android:maxLines="1"
            android:singleLine="true"
            android:text="6栋2单元11楼  6-1-1103"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_big"
            android:drawablePadding="@dimen/margin_small"
            android:drawableRight="@drawable/arrow_go_icon_small"
            android:maxLines="1"
            android:singleLine="true"
            android:text="@string/goto_authentication" />
    </RelativeLayout>


</android.support.v7.widget.CardView>