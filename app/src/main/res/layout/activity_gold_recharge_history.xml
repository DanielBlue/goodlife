<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zoesap.goodlife.activity.GoldRechargeHistoryActivity">
    <include layout="@layout/include_top_toolbar" />
    <RelativeLayout
        android:id="@+id/rl_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/record_empty"
                android:text="@string/no_recharge_history"
                android:drawablePadding="@dimen/base_margin"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="去充点钱吧，方便消费"
                android:padding="@dimen/base_margin"
                android:textSize="@dimen/text_size_small"/>
            <TextView
                android:id="@+id/tv_go_recharge"
                style="@style/ButtonTextStyle"
                android:text="@string/go_recharge"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"/>
        </LinearLayout>

    </RelativeLayout>
</FrameLayout>
